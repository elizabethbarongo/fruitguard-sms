# SMSLeopard API Configuration
# Get these from your SMSLeopard account dashboard
Name=fruitguard-sms
Environment=sandbox

# REQUIRED: Your SMSLeopard API credentials
# The service now uses Basic Authentication with API key and secret
API_key=your_smsleopard_api_key_here
API_secret=your_smsleopard_api_secret_here

# OPTIONAL: Access token (used as fallback if API secret is not available)
# Note: Basic Auth with API key + secret is preferred
Access_token=your_smsleopard_access_token_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT=/dr

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO

# SMS Configuration
# IMPORTANT: Sender ID must be pre-approved in your SMSLeopard account
# "FruitGuard" is not automatically approved - you must request it
# Check your dashboard for approved sender IDs or request approval
DEFAULT_SENDER_ID=FruitGuard
MAX_RETRIES=3
RETRY_DELAY=5

# Troubleshooting Tips:
# 1. Ensure both API_key and API_secret are set
# 2. Verify credentials in your SMSLeopard dashboard
# 3. Check if your account is active and has credits
# 4. Verify sender ID is approved in your account
# 5. Use test scripts to diagnose issues:
#    - python test_fixed_service.py
#    - python test_api_endpoints.py
#    - python test_default_sender.py

